package dev.thinke.domain.data.graph;

import java.util.ArrayList;
import java.util.List;

@org.checkerframework.framework.qual.AnnotatedFor("org.checkerframework.checker.nullness.NullnessChecker")
public class GraphOperations<T extends Comparable<T>> {

    private final @org.checkerframework.checker.initialization.qual.Initialized @org.checkerframework.checker.nullness.qual.NonNull Graph<T> graph;

    public GraphOperations(Integer maxV, Boolean isDirected) {
        graph = new Graph<>();
        graph.nVertices = 0;
        graph.nEdges = 0;
        graph.directed = isDirected;
        graph.degree = new ArrayList<>(maxV);
        graph.edges = new ArrayList<>(maxV);
        for (int i = 1; i <= maxV; i++) {
            graph.degree.set(i, 0);
            graph.edges.set(i, null);
        }
    }

    @org.checkerframework.dataflow.qual.Pure
    public void traverse() {
    }

    private static class Graph<T> {

        public @org.checkerframework.checker.initialization.qual.Initialized @org.checkerframework.checker.nullness.qual.MonotonicNonNull List<Edge<T>> edges;

        public @org.checkerframework.checker.initialization.qual.Initialized @org.checkerframework.checker.nullness.qual.MonotonicNonNull List<Integer> degree;

        public @org.checkerframework.checker.initialization.qual.Initialized @org.checkerframework.checker.nullness.qual.MonotonicNonNull Integer nVertices;

        public @org.checkerframework.checker.initialization.qual.Initialized @org.checkerframework.checker.nullness.qual.MonotonicNonNull Integer nEdges;

        public @org.checkerframework.checker.initialization.qual.Initialized @org.checkerframework.checker.nullness.qual.MonotonicNonNull Boolean directed;
    }

    private static class Edge<T> {

        public @org.checkerframework.checker.initialization.qual.FBCBottom @org.checkerframework.checker.nullness.qual.MonotonicNonNull Edge<T> next;

        public @org.checkerframework.checker.initialization.qual.FBCBottom @org.checkerframework.checker.nullness.qual.MonotonicNonNull Integer weight;

        public @org.checkerframework.checker.initialization.qual.FBCBottom @org.checkerframework.checker.nullness.qual.MonotonicNonNull Integer y;
    }

    private static enum VertexStatus {

        // initial state, has not been visited
        UNDISCOVERED,
        // found but has not had edges processed
        DISCOVERED,
        // processed all edges
        PROCESSED
    }
}
